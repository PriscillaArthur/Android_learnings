<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:contentPadding="16dp"
    android:layout_width="match_parent">

   <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

       <androidx.cardview.widget.CardView
           android:id="@+id/cardViewCoinIcon"
           android:layout_width="100dp"
           android:layout_height="100dp"
           app:cardCornerRadius="8dp"
           app:cardBackgroundColor="@color/orange"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent" />
       <ImageView
           android:id="@+id/imageViewInCard"
           android:layout_width="60dp"
           android:layout_height="60dp"
           app:layout_constraintTop_toTopOf="@id/cardViewCoinIcon"
           app:layout_constraintStart_toStartOf="@id/cardViewCoinIcon"
           app:layout_constraintEnd_toEndOf="@id/cardViewCoinIcon"
           app:layout_constraintBottom_toBottomOf="@id/cardViewCoinIcon"
           android:contentDescription="@string/app_name"
           />

       <androidx.cardview.widget.CardView
           android:id="@+id/cardViewState"
           android:layout_width="30dp"
           android:layout_height="30dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:cardCornerRadius="10dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:cardBackgroundColor="@color/green"

           />

       <TextView
           android:id="@+id/cardName1"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:layout_marginStart="16dp"
           app:layout_constraintStart_toStartOf="@id/cardViewCoinIcon"
           app:layout_constraintEnd_toStartOf="@id/cardViewState"
           app:layout_constraintTop_toTopOf="@id/cardViewCoinIcon"
           app:layout_constraintBottom_toBottomOf="@id/cardViewCoinIcon"
           />

       <TextView
           android:id="@+id/cardName2"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:layout_marginStart="16dp"
           app:layout_constraintStart_toStartOf="@id/cardViewCoinIcon"
           app:layout_constraintEnd_toStartOf="@id/cardViewState"
           app:layout_constraintTop_toTopOf="@id/cardName1"
           app:layout_constraintBottom_toBottomOf="@id/cardViewCoinIcon"
           />

   </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>