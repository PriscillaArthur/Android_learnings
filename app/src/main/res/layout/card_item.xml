<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_purple"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/CallBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="40dp"
            android:layout_marginVertical="20dp"
            app:cardBackgroundColor="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ImageCallIcon"
            android:layout_width="wrap_content"
            android:elevation="2dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon"
            app:layout_constraintEnd_toEndOf="@id/CallBackground"
            app:layout_constraintTop_toTopOf="@id/CallBackground"
            app:layout_constraintStart_toStartOf="@id/CallBackground"
            app:layout_constraintBottom_toBottomOf="@id/CallBackground"
            />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ImageCallIcon"
            app:layout_constraintBottom_toBottomOf="@id/ImageCallIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/CallBackground"
            android:text="@string/heaven_meeting"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/textViewTimeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            android:text="@string/_8_00_9_00"
            android:background="@drawable/time_card"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDiscussionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewTimeCard"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Discussion of the tasks with clients"
            android:textSize="30dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/CallBackground1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            android:layout_marginVertical="20dp"
            app:cardBackgroundColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/textViewDiscussionText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/CallBackground2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            android:layout_marginVertical="20dp"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textViewDiscussionText"
            app:layout_constraintStart_toStartOf="@id/CallBackground1"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="All members"
            android:textSize="30dp"
            android:textColor="@color/purple_500"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="@id/CallBackground2"
            app:layout_constraintBottom_toBottomOf="@id/CallBackground2"
            />







    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>



